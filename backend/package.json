{
  "name": "@highschooltrends/backend",
  "version": "1.0.0",
  "description": "HighSchoolTrends.org v2 Backend - Gold Standard Data Platform",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "echo 'ESLint: Using TypeScript compiler for linting - tsc --noEmit'",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "bronze:cli": "tsx src/cli/bronze-cli.ts",
    "bronze:test": "npm run bronze:cli -- test",
    "bronze:validate": "npm run bronze:cli -- validate",
    "bronze:stats": "npm run bronze:cli -- stats",
    "bronze:process": "npm run bronze:cli -- process",
    "bronze:health-test": "tsx src/cli/health-test.ts",
    "bronze:recovery": "tsx src/cli/bronze-recovery.ts",
    "bronze:test-real": "npx tsx src/cli/test-real-files.ts",
    "silver:cli": "tsx src/cli/silver-cli.ts",
    "silver:test": "npm run silver:cli -- test",
    "silver:validate": "npm run silver:cli -- validate",
    "silver:stats": "npm run silver:cli -- stats",
    "silver:extract": "npm run silver:cli -- extract"
  },
  "keywords": [
    "education",
    "school-rankings", 
    "data-pipeline",
    "html-extraction",
    "us-news"
  ],
  "author": "HighSchoolTrends.org Team",
  "license": "MIT",
  "dependencies": {
    "@types/node": "^20.0.0",
    "better-sqlite3": "^9.0.0",
    "commander": "^11.0.0",
    "glob": "^10.0.0",
    "jsdom": "^24.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/glob": "^8.0.0",
    "@types/jsdom": "^21.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "rimraf": "^5.0.0",
    "vitest": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ]
}